{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/entity-library": ["./src/entity-library/api/index.ts"],
      "@/entity-library/actions": ["./src/entity-library/api/actions/index.ts"],
      "@/entity-library/actions/*": ["./src/entity-library/api/actions/*"],
      "@/entity-library/components": ["./src/entity-library/api/components/index.ts"],
      "@/entity-library/components/*": ["./src/entity-library/api/components/*"],
      "@/entity-library/config": ["./src/entity-library/api/config/index.ts"],
      "@/entity-library/config/*": ["./src/entity-library/api/config/*"],
      "@/entity-library/hooks": ["./src/entity-library/__internal__/hooks"],
      "@/entity-library/hooks/*": ["./src/entity-library/__internal__/hooks/*"],
      "@/entity-library/types": ["./src/entity-library/api/types/index.ts"],
      "@/entity-library/types/*": ["./src/entity-library/api/types/*"],
      "@/entity-library/utils": ["./src/entity-library/__internal__/utils"],
      "@/entity-library/utils/*": ["./src/entity-library/__internal__/utils/*"],
      "@/*": ["./src/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules", "src/core/api/generated"]
}
